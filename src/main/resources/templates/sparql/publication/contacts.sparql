PREFIX obo: <http://purl.obolibrary.org/obo/>
PREFIX vcard: <http://www.w3.org/2006/vcard/ns#>

CONSTRUCT {
    ?vcard ?title ?object .
    ?vcard ?email ?object .
    ?vcard ?phone ?object .
} WHERE {
    <[(${uri})]> obo:ARG_2000028 ?vcard .
    ?vcard ?title ?object .
    OPTIONAL { ?vcard ?email ?object . }
    OPTIONAL { ?vcard ?phone ?object . }
}
